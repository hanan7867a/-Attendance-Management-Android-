<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@color/background_light">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Header -->
        <TextView
            android:id="@+id/tvHeader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/announcement_details"
            android:textSize="26sp"
            android:textStyle="bold"
            android:textColor="@color/text_primary"
            android:paddingBottom="16dp"
            android:letterSpacing="0.02"
            style="@style/TextTitle" />

        <!-- Announcement Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:layout_marginTop="8dp"
            android:foreground="?attr/selectableItemBackground"
            android:elevation="6dp"
            app:cardCornerRadius="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <!-- Announcement Image -->
                <ImageView
                    android:id="@+id/announcementImage"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:scaleType="centerCrop"
                    android:visibility="gone"
                    android:layout_marginBottom="16dp"

                    android:src="@drawable/placeholder_grey"
                    android:contentDescription="@string/announcement_image" />

                <!-- Title -->
                <TextView
                    android:id="@+id/tvTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/sample_title"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_primary"
                    android:paddingBottom="6dp"
                    android:lineSpacingExtra="2dp"
                    style="@style/TextSubtitle" />

                <!-- Date + Author -->
                <TextView
                    android:id="@+id/tvMeta"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/sample_meta"
                    android:textSize="13sp"
                    android:textColor="@color/text_secondary"
                    android:paddingBottom="14dp"
                    android:letterSpacing="0.01"
                    style="@style/TextMeta" />

                <!-- Description -->
                <TextView
                    android:id="@+id/tvDescription"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/sample_description"
                    android:textSize="16sp"
                    android:lineSpacingExtra="6dp"
                    android:textColor="@color/text_body"
                    android:paddingBottom="20dp"
                    android:letterSpacing="0.01"
                    style="@style/TextBody" />

                <!-- Attachment Button -->
                <LinearLayout
                    android:id="@+id/btnAttachment"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:padding="14dp"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/rounded_grey_announ"
                    android:elevation="3dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?attr/selectableItemBackground">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_attachment"
                        app:tint="@color/text_primary" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingStart="12dp"
                        android:text="@string/view_attachment"
                        android:textColor="@color/text_primary"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        style="@style/TextButton" />
                </LinearLayout>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>
</ScrollView>
