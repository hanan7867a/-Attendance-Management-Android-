<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_light"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Header -->
        <TextView
            android:id="@+id/tvHeader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Create Announcement"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@color/text_primary"
            android:layout_gravity="center_horizontal"
            android:paddingBottom="16dp" />

        <!-- Title -->
        <EditText
            android:id="@+id/etTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Title"
            android:textColor="@color/text_primary"
            android:background="@android:drawable/edit_text"
            android:padding="12dp"
            android:layout_marginBottom="12dp" />

        <!-- Short Description -->
        <EditText
            android:id="@+id/etDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Short Description"
            android:minLines="2"
            android:textColor="@color/text_primary"
            android:background="@android:drawable/edit_text"
            android:padding="12dp"
            android:layout_marginBottom="12dp" />

        <!-- Detailed Description -->
        <EditText
            android:id="@+id/etDetailDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Detailed Description"
            android:minLines="4"
            android:textColor="@color/text_primary"
            android:background="@android:drawable/edit_text"
            android:padding="12dp"
            android:layout_marginBottom="12dp" />

        <!-- Posted By -->
        <EditText
            android:id="@+id/etPostedBy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Posted By"
            android:textColor="@color/text_primary"
            android:background="@android:drawable/edit_text"
            android:padding="12dp"
            android:layout_marginBottom="16dp" />

        <!-- Attachment URL -->
        <EditText
            android:id="@+id/etAttachment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Attachment URL"
            android:textColor="@color/text_primary"
            android:background="@android:drawable/edit_text"
            android:padding="12dp"
            android:layout_marginBottom="24dp" />

        <!-- Post Button -->
        <Button
            android:id="@+id/btnPostAnnouncement"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Post Announcement"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:background="@android:color/holo_blue_dark"
            android:padding="14dp" />

    </LinearLayout>
</ScrollView>
