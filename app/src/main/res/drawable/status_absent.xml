<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Background color -->
    <solid android:color="#E53935" />

    <!-- Rounded corners -->
    <corners android:radius="16dp" />

    <!-- Subtle border -->
    <stroke
        android:width="1dp"
        android:color="#C62828" />

    <!-- Internal padding -->
    <padding
        android:left="12dp"
        android:top="4dp"
        android:right="12dp"
        android:bottom="4dp" />

</shape>
