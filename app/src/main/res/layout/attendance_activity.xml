<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#FFFFFF">

    <!-- Header: Course Info -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="8dp">

        <TextView
            android:id="@+id/tvCourseName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Course: Programming Fundamentals"
            android:textSize="18sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/tvSection"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Section: A"
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/tvDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Date: 19-Dec-2025"
            android:textSize="16sp"/>
    </LinearLayout>

    <!-- Search bar (optional) -->
<!--    android:background="@drawable/rounded_edittext" under padding -->
    <EditText
        android:id="@+id/etSearch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Search student..."
        android:padding="8dp"

        android:drawableStart="@drawable/ic_search"
        android:drawablePadding="8dp"
        android:layout_marginBottom="8dp"/>

    <!-- RecyclerView for student list -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvStudentList"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:divider="@android:color/darker_gray"
        android:dividerHeight="1dp"/>

    <!-- Save Attendance Button -->
    <Button
        android:id="@+id/btnSaveAttendance"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Save Attendance"
        android:textSize="18sp"
        android:backgroundTint="#3F51B5"
        android:textColor="#FFFFFF"
        android:layout_marginTop="8dp"/>
</LinearLayout>
