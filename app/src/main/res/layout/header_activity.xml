<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="#FFFFFF">

    <!-- ================= TOP APP BAR ================= -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingStart="12dp"
        android:paddingEnd="12dp">

        <!-- Home Icon -->
        <ImageView
            android:id="@+id/homeIcon"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:src="@drawable/ic_home" />

        <!-- Title -->
        <TextView
            android:id="@+id/headerTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Attendity"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="#1B2B3F"
            android:gravity="center" />

        <!-- Notification Icon -->
        <ImageView
            android:id="@+id/notificationIcon"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:src="@drawable/notification_dash_std" />
    </LinearLayout>

    <!-- ================= PROFILE SECTION ================= -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="16dp">

        <ImageView
            android:id="@+id/profile_image"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:src="@drawable/profilepicture"
            android:scaleType="centerCrop"
            android:background="@drawable/circle_mask"
            android:layout_marginEnd="14dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/name_of_student"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/sakshi_choudhary"
                android:textStyle="bold"
                android:textSize="18sp"
                android:textColor="#000000" />

            <TextView
                android:id="@+id/std_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/sakshichoudhary_email_com"
                android:textSize="14sp"
                android:textColor="#6C6C6C" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
