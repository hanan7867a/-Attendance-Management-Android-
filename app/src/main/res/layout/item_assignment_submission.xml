<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="16dp"
    android:layout_marginVertical="10dp"
    app:cardCornerRadius="20dp"
    app:cardElevation="8dp"
    app:strokeWidth="0dp"
    app:cardBackgroundColor="?attr/colorSurface">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <!-- Title -->
        <TextView
            android:id="@+id/assignment_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Assignment: AI Project Report"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="?attr/colorOnSurface"
            android:fontFamily="sans-serif-medium"
            android:layout_marginBottom="8dp"/>

        <!-- Description -->
        <TextView
            android:id="@+id/assignment_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Describe the AI model you implemented and its results."
            android:textSize="15sp"
            android:textColor="?attr/colorOnSurfaceVariant"
            android:layout_marginBottom="16dp"
            android:maxLines="3"
            android:ellipsize="end"/>

        <!-- Due Date Chip -->
        <com.google.android.material.chip.Chip
            android:id="@+id/due_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Due: 10 Dec 2025"
            android:textSize="13sp"
            app:chipBackgroundColor="#FEE2E2"
            app:chipStrokeColor="#FCA5A5"
            app:chipStrokeWidth="1dp"
            app:chipIcon="@drawable/ic_calendar"
            app:chipIconTint="#991B1B"
            app:iconStartPadding="8dp"
            app:textStartPadding="12dp"
            app:textEndPadding="16dp"
            android:textColor="#991B1B"
            android:layout_marginBottom="20dp"/>

        <!-- Download Teacher's Assignment File -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="16dp">

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Assignment File"
                android:textSize="14sp"
                android:textColor="?attr/colorOnSurfaceVariant"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/download_button"
                style="@style/Widget.Material3.Button.OutlinedButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Download"
                android:textAllCaps="false"
                app:icon="@drawable/ic_download"
                app:iconGravity="textStart"
                app:iconPadding="8dp"
                app:cornerRadius="16dp"
                app:strokeColor="#1976D2"/>
        </LinearLayout>

        <!-- Student Submission Status + Upload -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/file_name"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Not submitted yet"
                android:textSize="15sp"
                android:textStyle="bold"
                android:textColor="#D32F2F"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/uploadFileBtn"
                style="@style/Widget.Material3.Button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Upload"
                android:textAllCaps="false"
                app:icon="@drawable/ic_upload"
                app:iconGravity="textStart"
                app:iconPadding="8dp"
                app:cornerRadius="16dp"/>
        </LinearLayout>

        <!-- Submitted File Name (shown only after upload) -->
        <TextView
            android:id="@+id/submission_status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="Submitted: my_report_final.pdf"
            android:textSize="14sp"
            android:textColor="#2E7D32"
            android:textStyle="bold"
            android:visibility="gone"/>
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>